<UserControl x:Class="NetRadio.G31Ddc.Audio.Control.Knob"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
         <Grid.ColumnDefinitions>
             <ColumnDefinition/>
             <ColumnDefinition/>
         </Grid.ColumnDefinitions>
        
        <Image Name="Wheel" Grid.Column="0" Grid.ColumnSpan="2" Source="{StaticResource KnobBlack}">
        </Image>
        <Label Grid.Column="0" KeyUp="Up" KeyDown="LeftDown" MouseUp="Up" MouseDown="LeftPushed"></Label>
        <Label Grid.Column="1" KeyUp="Up" KeyDown="RightDown" MouseUp="Up" MouseDown="RightPushed"></Label>
    </Grid>
</UserControl>
